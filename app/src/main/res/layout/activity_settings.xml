<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsActivity">

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/buttons"
        android:id="@+id/settingLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mainGeriDon"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/back"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/settingGoster"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Profile Settings"
            android:textColor="@android:color/background_light"/>
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/settingLinearLayout"
        android:id="@+id/profilePhotoSet"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/profile"
        app:civ_border_color="#000000"
        app:civ_border_width="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/userNameSet"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/profilePhotoSet"
        android:inputType="textMultiLine"
        android:hint="User Name"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/inputs"
        />

    <EditText
        android:id="@+id/profileStatusSet"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/userNameSet"
        android:inputType="textMultiLine"
        android:hint="Hey!! Artık ben de CHATBOX'tayım.."
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/inputs"
        />
    <Button
        android:id="@+id/updateSetting"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/profileStatusSet"
        android:text="UPDATE"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/buttons"
        />


</RelativeLayout>