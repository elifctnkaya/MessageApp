<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/buttons"
        android:id="@+id/profileLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/findFriendsDon"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/back"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/findFriendsGoster"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Find Friends"
            android:textColor="@android:color/background_light"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilResmiZiyaret"
        android:src="@drawable/profile"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:layout_width="210dp"
        android:layout_height="210dp"/>

    <TextView
        android:id="@+id/kullaniciAdiZiyaret"
        android:text="Kullanıcı Adı"
        android:layout_below="@+id/profilResmiZiyaret"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/kullaniciDurumuZiyaret"
        android:text="Heyyooo! Artık ben de Chatbox'tayım.."
        android:layout_below="@+id/kullaniciAdiZiyaret"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/mesajGondermeTalebi"
        android:layout_below="@+id/kullaniciDurumuZiyaret"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesaj Talebi Gönder"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/buttons"/>

    <Button
        android:id="@+id/mesajDegerlendirmeTalebi"
        android:layout_below="@+id/mesajGondermeTalebi"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesaj Talebi İptal"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/buttons"
        android:visibility="invisible"/>

</RelativeLayout>